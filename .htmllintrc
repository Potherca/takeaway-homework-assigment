{
    // names of npm modules to load into htmllint
    "plugins": [],
    "attr-bans": false,
    "attr-bool-req-value": "never",
    "attr-type-allowed": "never",
    "attr-name-style": false,
    "attr-no-unsafe-char": false,
    "attr-name-ignore-regex": "{{.*?}}",
    "attr-order": [
        "alt",
        "charset",
        "class",
        "crossorigin",
        "data-sort-option",
        "defer",
        "for",
        "href",
        "id",
        "integrity",
        "name",
        "placeholder",
        "rel",
        "role",
        "src",
        "title",
        "type",
        "value"
      ],
    "attr-quote-style" : "double",
    "doctype-html5": true,
    "html-req-lang": true,
    "id-class-style": false,
    "id-class-ignore-regex": "{{.*?}}",
    "indent-style": "spaces",
    "indent-width": 2,
    "tag-bans": false,
    "tag-close": true,
    "tag-self-close": "always",
    "spec-char-escape": false
}
